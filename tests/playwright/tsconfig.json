{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "../types/**/*.d.ts"],
  "exclude": ["node_modules", "src/*spec.ts"]
}
