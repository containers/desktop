{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "isolatedModules": true,

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"]
    }
  },
  "include": [
    "src/playwright/globalSetup/*.ts",
    "src/playwright/model/**/*.ts",
    "src/playwright/runner/*.ts",
    "src/playwright/setupFiles/setupFiles.ts",
    "src/playwright/setupFiles/extended-hooks-utils.ts",
    "src/playwright/testContext/*.ts",
    "src/playwright/utility/*.ts",
    "src/*.ts",
    "../types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
