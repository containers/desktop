{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    "types" : ["node"],

    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "exposedInMainWorld.d.ts",
    "../../types/**/*.d.ts"
, "../main/src/plugin/progress-impl.ts", "../main/src/plugin/dialog-impl.ts"  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
