{
  "compilerOptions": {
    "module": "node16",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    "types" : ["node"],

    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "exposedInMainWorld.d.ts",
    "../../types/**/*.d.ts"
  ]
}
