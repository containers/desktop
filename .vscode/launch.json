{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Main Process",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/scripts/watch.cjs",
            "args": [
                "--extension-folder",
                "../podman-desktop-redhat-account-ext",
                "--extension-folder",
                "../podman-desktop-sandbox-ext"
            ],
            "autoAttachChildProcesses": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**",
                "${workspaceFolder}/../podman-desktop-redhat-account-ext/**",
                "${workspaceFolder}/../podman-desktop-sandbox-ext/**"
            ]
        },
        {
            // Needs to start "Debug Main Process" first
            "name": "Attach Debugger Renderer Process",
            "request": "attach",
            "type": "chrome",
            "port": 9223,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/packages/",
            "timeout": 30000,
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${workspaceFolder}/packages/renderer/dist/*",
            }
          },
    ],
}

